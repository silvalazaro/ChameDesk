<project>
    <delete dir="${db.nome}"/>
    <path id="classpath">
        <fileset dir="${project.build.directory}" includes="derby-${derby.versao}.jar"/>
    </path>
    <sql
        classpathref="classpath" 
        driver="org.apache.derby.jdbc.EmbeddedDriver"
        url="jdbc:derby:${db.nome};create=true"
        userid="${db.usuario}"
        password="${db.senha}"
        src="bancodedados.sql"
    />
</project>
